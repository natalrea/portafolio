---
/**
 * COMPONENTE: Hero
 * =================
 *
 * Sección principal de presentación del portfolio.
 * Primera sección que ven los visitantes al llegar al sitio.
 *
 * Soporta Español e Inglés.
 */

interface Props {
  lang?: string;  // Idioma de la página ('es' o 'en')
}

const { lang = 'es' } = Astro.props;

// Textos traducidos
const translations = {
  es: {
    greeting: "Hola, soy",
    title: "Victor Rea",
    subtitle: "Desarrollador Full Stack",
    description: "Soy un desarrollador apasionado por crear experiencias web eficientes y modernas.",
    ctaProjects: "Ver Proyectos",
    ctaTemplate: "Ver Template"
  },
  en: {
    greeting: "Hi, I'm",
    title: "Victor Rea",
    subtitle: "Full Stack Developer",
    description: "I am a passionate developer creating efficient and modern web experiences.",
    ctaProjects: "View Projects",
    ctaTemplate: "View Template"
  }
};

// Selecciona los textos según el idioma
const t = translations[lang];
---

<section class="hero">
  <div class="container">
    <div class="hero-content fade-in">
      <!-- SALUDO -->
      <p class="mono greeting">{t.greeting}</p>

      <!-- TÍTULO PRINCIPAL -->
      <h1>{t.title}<span class="blink">_</span></h1>

      <!-- SUBTÍTULO -->
      <p class="subtitle mono">{t.subtitle}</p>

      <!-- DESCRIPCIÓN -->
      <p class="description mono" set:html={t.description}></p>

      <!-- BOTONES CTA -->
      <div class="cta">
        <a href="#projects" class="btn-primary mono">{t.ctaProjects}</a>
        <a href="https://github.com/yourusername/your-template-repo" target="_blank" rel="noopener" class="btn-secondary mono">{t.ctaTemplate}</a>
      </div>
    </div>
  </div>
</section>

<style>
.hero {
  min-height: 90vh;
  display: flex;
  align-items: center;
  padding: 6rem 0;
}
.hero-content { max-width: 800px; }
.greeting { font-size: 0.9rem; opacity: 0.7; margin-bottom: 0.5rem; }
h1 { margin-bottom: 1rem; }
.blink { animation: blink 1s infinite; }
@keyframes blink { 0%, 50% { opacity: 1; } 51%, 100% { opacity: 0; } }
.subtitle { font-size: 1.25rem; margin-bottom: 1.5rem; opacity: 0.8; }
.description { font-size: 1.1rem; margin-bottom: 2rem; opacity: 0.7; }
.cta { display: flex; gap: 1rem; flex-wrap: wrap; }
.btn-primary,
.btn-secondary { padding: 0.75rem 2rem; border: 2px solid var(--text); transition: all 0.3s; display: inline-block; font-family: var(--mono); font-size: 0.9rem; }
.btn-primary { background: var(--text); color: var(--bg); border-bottom: none; }
.btn-primary:hover { opacity: 1; transform: translateY(-2px); }
.btn-secondary { background: transparent; }
.btn-secondary:hover { background: var(--text); color: var(--bg); opacity: 1; }
@media (max-width: 768px) { .hero { min-height: 80vh; } .cta { flex-direction: column; } .btn-primary, .btn-secondary { text-align: center; } }
</style>
