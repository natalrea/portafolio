---
interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;

const translations = {
  es: {
    greeting: "Hola, soy",
    title: "Víctor Rea",
    subtitle: "Desarrollador de Software",
    description:
      "Desarrollo sistemas y soluciones digitales adaptadas a las necesidades de cada cliente, combinando funcionalidad, diseño y rendimiento.",
    ctaProjects: "Ver Página",
    pageTitle: "$ página",
    pageContent: "Diseño y desarrollo sistemas web que impulsan negocios, mejoran la eficiencia y ofrecen experiencias modernas a los usuarios."
  },
  en: {
    greeting: "Hi, I'm",
    title: "Víctor Rea",
    subtitle: "Software Developer",
    description:
      "I develop digital systems and solutions tailored to each client’s needs, combining functionality, design, and performance.",
    ctaProjects: "View Page",
    pageTitle: "$ page",
    pageContent: "I design and build web systems that boost businesses, improve efficiency, and provide modern user experiences."
  }
};

const t = translations[lang];
---

<section class="hero">
  <div class="container">
    <div class="hero-content fade-in">
      <p class="mono greeting">{t.greeting}</p>
      <h1>{t.title}<span class="blink">_</span></h1>
      <p class="subtitle mono">{t.subtitle}</p>
      <p class="description mono" set:html={t.description}></p>

      <div class="cta">
        <a href="#pagina" class="btn-primary mono">{t.ctaProjects}</a>
      </div>
    </div>
  </div>
</section>

<!-- Sección "Página" dentro del mismo Hero -->
<section id="pagina" class="pagina-section">
  <div class="container">
    <h2 class="mono">{t.pageTitle}</h2>
    <p class="mono">{t.pageContent}</p>
  </div>
</section>

<style>
.hero {
  min-height: 90vh;
  display: flex;
  align-items: center;
  padding: 6rem 0;
}
.hero-content { max-width: 800px; }
.greeting { font-size: 0.9rem; opacity: 0.7; margin-bottom: 0.5rem; }
h1 { margin-bottom: 1rem; }
.blink { animation: blink 1s infinite; }
@keyframes blink { 0%, 50% { opacity: 1; } 51%, 100% { opacity: 0; } }
.subtitle { font-size: 1.25rem; margin-bottom: 1.5rem; opacity: 0.8; }
.description { font-size: 1.1rem; margin-bottom: 2rem; opacity: 0.7; }
.cta { display: flex; gap: 1rem; flex-wrap: wrap; justify-content: center; }
.btn-primary {
  padding: 0.75rem 2rem;
  border: 2px solid var(--text);
  background: var(--text);
  color: var(--bg);
  transition: 0.3s;
  font-family: var(--mono);
  font-size: 0.9rem;
}
.btn-primary:hover { transform: translateY(-2px); }

.pagina-section {
  padding: 6rem 1rem;
  text-align: center;
}
.pagina-section h2 { font-size: 1.5rem; margin-bottom: 1rem; }
.pagina-section p { font-size: 1.1rem; opacity: 0.8; }

@media (max-width: 768px) {
  .hero { min-height: 80vh; }
  .cta { flex-direction: column; }
}
</style>
