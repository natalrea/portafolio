const projects = [
  {
    name: "Centro de la Vista",
    description:
      "Web creada con Astro y SQLite.",
    web: "https://centrodelavista.com/"
  }
];
---
<section id="projects" class="projects-section">
  <div class="container">
    <h2 class="mono">$ ls ~/projects</h2>

    <div class="projects-grid">
      {projects.map(project => (
        <article class="project-card">
          <h3 class="project-title mono">{project.name}</h3>
          <p class="project-description mono">{project.description}</p>

          <div class="project-actions">
            <a href={project.web} target="_blank" rel="noopener noreferrer" class="btn-secondary mono">
              PÃ¡gina
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
.projects-section {
  padding: 6rem 1.5rem;
  text-align: center;
}

.projects-grid {
  display: flex;
  flex-direction: column;
  gap: 2.5rem;
  align-items: center;
  margin-top: 2rem;
}

.project-card {
  max-width: 780px;
  padding: 2.5rem;
  border-radius: 1rem;
  border: 1px solid rgba(255, 255, 255, 0.06);
  background: transparent;
  text-align: left;
}

.project-title {
  font-size: 2.2rem; /* ðŸ”¥ MÃ¡s grande que antes */
  font-weight: 600;
  margin-bottom: 1rem;
  letter-spacing: 0.5px;
}

.project-description {
  opacity: 0.85;
  margin-bottom: 1.5rem;
  line-height: 1.6;
  font-size: 1.1rem;
}

.project-actions {
  display: flex;
  gap: 1rem;
  justify-content: flex-start;
}

.btn-secondary {
  padding: 0.7rem 1.4rem;
  border: 2px solid var(--text);
  background: transparent;
  color: var(--text);
  text-decoration: none;
  font-family: var(--mono);
  border-radius: 0.5rem;
  transition: all 0.18s;
}

.btn-secondary:hover {
  background: var(--text);
  color: var(--bg);
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .project-card {
    text-align: center;
  }
  .project-actions {
    justify-content: center;
  }
}
</style>
