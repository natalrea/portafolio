---
/**
 * Sección de proyectos — solo "Centro de la Vista"
 */
const projects = [
  {
    name: "Centro de la Vista",
    description:
      "Web creada con Astro y SQLite.",
    web: "https://centrodelavista.com/"
  }
];
---
<section id="projects" class="projects-section">
  <div class="container">
    <h2 class="mono">$ ls ~/projects</h2>

    <div class="projects-grid">
      {projects.map(project => (
        <article class="project-card">
          <h3 class="project-title mono">{project.name}</h3>
          <p class="project-description mono">{project.description}</p>

          <div class="project-actions">
            <a href={project.web} target="_blank" rel="noopener noreferrer" class="btn-secondary mono">
              Página
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
.projects-section {
  padding: clamp(3rem, 8vw, 6rem) clamp(1rem, 3vw, 1.5rem);
  text-align: center;
}

.projects-section h2 {
  font-size: clamp(1.5rem, 4vw, 2rem);
  margin-bottom: clamp(1rem, 3vw, 2rem);
}

.projects-grid {
  display: flex;
  flex-direction: column;
  gap: clamp(1.5rem, 4vw, 2.5rem);
  align-items: center;
  margin-top: 2rem;
}

.project-card {
  max-width: 780px;
  width: 100%;
  padding: clamp(1.5rem, 4vw, 2.5rem);
  border-radius: 1rem;
  border: 1px solid rgba(255, 255, 255, 0.06);
  background: transparent;
  text-align: center;
  box-sizing: border-box;
}

.project-title {
  font-size: clamp(1.5rem, 5vw, 2.2rem);
  font-weight: 600;
  margin-bottom: 1rem;
  letter-spacing: 0.5px;
}

.project-description {
  opacity: 0.85;
  margin-bottom: 1.5rem;
  line-height: 1.6;
  font-size: clamp(0.95rem, 2.5vw, 1.1rem);
}

.project-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  align-items: center;
}

.btn-secondary {
  padding: clamp(0.6rem, 2vw, 0.7rem) clamp(1.2rem, 3vw, 1.4rem);
  border: 2px solid var(--text);
  background: transparent;
  color: var(--text);
  text-decoration: none;
  font-family: var(--mono);
  border-radius: 0.5rem;
  transition: all 0.18s;
  font-size: clamp(0.9rem, 2vw, 1rem);
  cursor: pointer;
  display: inline-block;
}

.btn-secondary:hover {
  background: var(--text);
  color: var(--bg);
  transform: translateY(-2px);
}

.btn-secondary:active {
  transform: translateY(0);
}

/* Tablets */
@media (max-width: 768px) {
  .projects-section {
    padding: clamp(2rem, 5vw, 3rem) clamp(1rem, 2vw, 1.5rem);
  }

  .project-card {
    text-align: center;
    padding: clamp(1.2rem, 3vw, 2rem);
  }

  .project-actions {
    justify-content: center;
  }

  .project-title {
    margin-bottom: 0.75rem;
  }

  .project-description {
    margin-bottom: 1.25rem;
  }
}

/* Móviles */
@media (max-width: 480px) {
  .projects-section {
    padding: 2rem 1rem;
  }

  .projects-grid {
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .project-card {
    padding: 1.5rem;
    border-radius: 0.75rem;
  }

  .project-title {
    margin-bottom: 0.5rem;
  }

  .project-description {
    margin-bottom: 1rem;
  }

  .project-actions {
    flex-direction: column;
    width: 100%;
  }

  .btn-secondary {
    width: 100%;
    text-align: center;
  }
}
</style>