---
/**
 * Sección de proyectos — solo "Centro de la Vista"
 */
const projects = [
  {
    name: "Centro de la Vista",
    description:
      "Desarrollo sistemas y soluciones digitales adaptadas a las necesidades de cada cliente, combinando funcionalidad, diseño y rendimiento.",
    web: "https://centrodelavista.com/"
  }
];
---
<section id="projects" class="projects-section">
  <div class="container">
    <h2 class="mono">$ ls ~/projects</h2>

    <div class="projects-grid">
      {projects.map(project => (
        <article class="project-card">
          <h3 class="project-title mono">{project.name}</h3>
          <p class="project-description mono">{project.description}</p>

          <div class="project-actions">
            <a href={project.web} target="_blank" rel="noopener noreferrer" class="btn-secondary mono">
              Página
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
.projects-section { padding:6rem 1.5rem; text-align:center; }
.projects-grid { display:flex; flex-direction:column; gap:2.5rem; align-items:center; margin-top:2rem; }
.project-card { max-width:780px; padding:2rem; border-radius:1rem; border:1px solid rgba(255,255,255,0.06); background:transparent; text-align:left; }
.project-title { font-size:1.5rem; margin-bottom:0.75rem; }
.project-description { opacity:.85; margin-bottom:1.25rem; line-height:1.6; }
.project-actions { display:flex; gap:1rem; justify-content:flex-start; }
.btn-secondary { padding:.65rem 1.25rem; border:2px solid var(--text); background:transparent; color:var(--text); text-decoration:none; font-family:var(--mono); border-radius:.5rem; transition:all .18s; }
.btn-secondary:hover { background:var(--text); color:var(--bg); transform:translateY(-2px); }
@media (max-width:768px){ .project-card{ text-align:center } .project-actions{ justify-content:center } }
</style>
