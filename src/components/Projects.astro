---
/**
 * COMPONENTE: Projects
 * =====================
 * Muestra la sección de proyectos en el portafolio.
 * Adaptado para tener solo un apartado: "Página".
 */

import { useI18n } from "../lib/i18n.js";

const { lang = "es" } = Astro.props;
const { t } = useI18n(lang);
---

<section id="projects" class="projects">
  <div class="container">
    <h2 class="mono">{t.projectsTitle}</h2>

    <div class="projects-grid">
      <!-- ÚNICO PROYECTO: PÁGINA -->
      <article class="project-card">
        <h3 class="project-title mono">Página</h3>
        <p class="project-description mono">
          Sitio web profesional desarrollado con Astro, TypeScript y diseño adaptable.  
          Optimizado para mostrar proyectos, contacto y presencia digital de manera elegante y eficiente.
        </p>
        <div class="project-links">
          <a href="/" class="btn-primary mono" target="_blank" rel="noopener">[ver página]</a>
        </div>
      </article>
    </div>
  </div>
</section>

<style>
.projects {
  padding: 6rem 1rem;
  text-align: center;
}
.projects-grid {
  display: flex;
  justify-content: center;
  margin-top: 2rem;
}
.project-card {
  border: 1px solid var(--text);
  border-radius: 1rem;
  padding: 2rem;
  max-width: 600px;
  background: transparent;
  transition: transform 0.2s ease;
}
.project-card:hover {
  transform: translateY(-4px);
}
.project-title {
  font-size: 1.5rem;
  margin-bottom: 1rem;
}
.project-description {
  font-size: 1rem;
  opacity: 0.8;
  margin-bottom: 1.5rem;
}
.project-links a {
  text-decoration: none;
  border: 1px solid var(--text);
  padding: 0.5rem 1.5rem;
  border-radius: 0.5rem;
  transition: background 0.2s ease;
}
.project-links a:hover {
  background: var(--text);
  color: var(--bg);
}
</style>
