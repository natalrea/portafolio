---
import { useI18n } from '../lib/i18n.js';

interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;
const { t } = useI18n(lang);

const skillCategories = [
  {
    category: t.skillsFrontend,
    skills: ["React", "TypeScript", "Next.js", "Astro", "TailwindCSS", "HTML/CSS"]
  },
  {
    category: t.skillsBackend,
    skills: ["Node.js", "Express", "PostgreSQL", "MongoDB", "REST APIs", "GraphQL"]
  },
  {
    category: t.skillsAI,
    skills: ["Git", "Docker", "CI/CD", "Linux", "Render", "Netlify"]
  },
  {
    category: t.skillsOther,
    skills: ["Python", "Java", "Testing", "Agile", "Clean Code", "System Design"]
  }
];
---

<section id="skills" class="skills border-top">
  <div class="container">
    <h2 class="mono">{t.skillsTitle}</h2>
    <div class="skills-grid">
      {skillCategories.map((category, index) => (
        <div class="skill-category fade-in" style={`animation-delay: ${index * 0.1}s`}>
          <h3 class="mono">{category.category}</h3>
          <ul class="skill-list">
            {category.skills.map(skill => (
              <li>
                <span class="bullet">â€º</span> {skill}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .skills {
    padding: 6rem 0;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-top: 3rem;
  }

  .skill-category h3 {
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
  }

  .skill-list {
    list-style: none;
  }

  .skill-list li {
    padding: 0.5rem 0;
    font-size: 0.95rem;
    opacity: 0.8;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .bullet {
    font-family: var(--mono);
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
