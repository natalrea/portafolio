---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: "GitHub", url: "https://github.com/686f6c61/" },
  { name: "Twitter", url: "https://x.com/hex686f6c61" }
];
---

<footer id="contact" class="footer border-top">
  <div class="container">
    <div class="footer-content">
      <div class="footer-main">
        <h2 class="mono">$ contact --me</h2>
        <button class="reveal-email mono" id="reveal-email">
          cat email.txt
        </button>
        <div class="email-display mono" id="email-display" style="display: none;">
          <span class="email-link" id="email-text"></span>
        </div>
      </div>

      <div class="footer-links">
        <h3 class="mono">Links</h3>
        <nav class="social-links">
          {socialLinks.map(link => (
            <a href={link.url} target="_blank" rel="noopener noreferrer">
              {link.name}
            </a>
          ))}
        </nav>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="mono">
        © {currentYear} 686f6c61.dev
      </p>
      <p class="mono">
        <span class="status">●</span> All systems operational
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 4rem 0 2rem;
    margin-top: 4rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-main h2 {
    margin-bottom: 1rem;
  }

  .reveal-email {
    background: transparent;
    border: 2px solid var(--border);
    color: var(--text);
    padding: 0.75rem 1.5rem;
    cursor: pointer;
    transition: all 0.3s;
    font-family: var(--mono);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .reveal-email:hover {
    border-color: var(--text);
    transform: translateY(-2px);
  }

  .email-display {
    margin-top: 1rem;
    animation: fadeIn 0.5s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .email-link {
    font-size: 1.25rem;
    font-weight: 500;
    display: inline-block;
  }

  .footer-links h3 {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    opacity: 0.7;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .social-links a {
    opacity: 0.7;
    transition: opacity 0.2s;
  }

  .social-links a:hover {
    opacity: 1;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid var(--border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    opacity: 0.6;
  }

  .status {
    color: #00ff00;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const revealButton = document.getElementById('reveal-email');
    const emailDisplay = document.getElementById('email-display');
    const emailText = document.getElementById('email-text');

    if (revealButton && emailDisplay && emailText) {
      revealButton.addEventListener('click', () => {
        // Construir email de forma ofuscada
        const user = atob('Njg2ZjZjNjE='); // Base64 de "686f6c61"
        const domain = atob('MDBiLnRlY2g='); // Base64 de "00b.tech"
        const email = user + '@' + domain;

        // Crear link dinámicamente
        const link = document.createElement('a');
        link.href = 'mailto:' + email;
        link.textContent = email;
        link.className = 'email-link';

        emailText.appendChild(link);

        revealButton.style.display = 'none';
        emailDisplay.style.display = 'block';
      });
    }
  });
</script>
