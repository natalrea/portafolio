---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tours Virtuales" description="Explora los tours virtuales del CICESE" lang="es">
  <main id="main-content">
    <section class="tours-section" style="padding: 2rem; text-align: center;">
      <h1 style="margin-bottom: 1rem;">Tours Virtuales</h1>
      <p style="margin-bottom: 2rem;">Explora los recorridos virtuales del CICESE:</p>

      <iframe 
        src="https://ut3.cicese.mx/recorrido" 
        width="100%" 
        height="800" 
        style="border: 1px solid #ccc; border-radius: 8px;"
        title="Tours Virtuales CICESE">
      </iframe>
    </section>
  </main>
</Layout>
