---
import Layout from '../layouts/Layout.astro';
---

<style>
  .tours-section {
    padding: 2rem;
    text-align: center;
  }

  h1 {
    margin-bottom: 1rem;
    font-size: clamp(1.5rem, 5vw, 2.5rem);
  }

  h2 {
    margin: 3rem 0 1rem 0;
    font-size: clamp(1.2rem, 4vw, 2rem);
  }

  .tour-description {
    margin-bottom: 2rem;
    font-size: 0.95rem;
    color: #666;
    width: 100%;
  }

  .tour-image {
    width: 100%;
    max-width: 900px;
    border: 1px solid #ccc;
    border-radius: 8px;
    margin: 0 auto 2rem auto;
    display: block;
  }

  .tour-iframe-container {
    position: relative;
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding-bottom: 56.25%;
    border: 1px solid #ccc;
    border-radius: 8px;
    overflow: hidden;
  }

  .tour-iframe-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  @media (max-width: 768px) {
    .tours-section {
      padding: 1.5rem;
    }

    h1 {
      margin-bottom: 0.75rem;
    }

    h2 {
      margin: 2rem 0 0.75rem 0;
    }

    .tour-description {
      margin-bottom: 1.5rem;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .tours-section {
      padding: 1rem;
    }

    h1 {
      margin-bottom: 0.5rem;
    }

    h2 {
      margin: 1.5rem 0 0.5rem 0;
    }

    .tour-description {
      margin-bottom: 1rem;
      font-size: 0.85rem;
    }
  }
</style>

<Layout title="Tours Virtuales" description="Explora los tours virtuales del CICESE" lang="es">
<main id="main-content">
  <section class="tours-section">
    <h1>Tours Virtuales</h1>

    <!-- TOUR 1: CICESE -->
    <h2>Recorrido Virtual — CICESE</h2>

    <!-- Vista previa usando imagen local (CICESE.png) -->
    <img
      src="/CICESE.png"
      alt="Vista previa del recorrido CICESE"
      class="tour-image"
    />

    <!-- TOUR 2: UAE -->
    <h2>Recorrido Virtual — UAE</h2>

    <p class="tour-description">
      Recorrido virtual UAE
    </p>

    <div class="tour-iframe-container">
      <iframe
        src="https://victorjesusreavalencia.github.io/expo-arte/"
        title="Recorrido virtual de UAE"
        allowfullscreen
      ></iframe>
    </div>
  </section>
</main>
</Layout>