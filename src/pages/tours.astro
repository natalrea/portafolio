---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tours Virtuales" description="Explora los tours virtuales del CICESE" lang="es">
<main id="main-content">
  <section class="tours-section" style="padding: 2rem; text-align: center;">
    <h1 style="margin-bottom: 1rem;">Tours Virtuales</h1>

    <p
      style="
        margin-bottom: 2rem;
        margin-left: auto;
        margin-right: auto;
        max-width: 600px;
        text-align: center;
      "
    >
      Explora los recorridos virtuales disponibles:
    </p>

    <!-- TOUR 1: CICESE -->
    <h2 style="margin: 2rem 0 1rem 0;">Recorrido Virtual — CICESE</h2>

    <!-- Vista previa usando imagen local (CICESE.png) -->
    <img
      src="/CICESE.png"
      alt="Vista previa del recorrido CICESE"
      style="width: 100%; max-width: 900px; border: 1px solid #ccc; border-radius: 8px; margin: 0 auto;"
    />

    <!-- TOUR 2: UAE -->
    <h2 style="margin: 3rem 0 1rem 0;">Recorrido Virtual — UAE</h2>

    <div
      style="
        position: relative;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        padding-bottom: 56.25%;
        border: 1px solid #ccc;
        border-radius: 8px;
        overflow: hidden;
      "
    >
      <iframe
        src="https://victorjesusreavalencia.github.io/expo-arte/"
        style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
        title="Recorrido virtual de UAE"
        allowfullscreen
      ></iframe>
    </div>
  </section>
</main>
</Layout>
