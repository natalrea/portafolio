---
/**
 * MAIN PAGE (ENGLISH)
 * ===================
 *
 * This is the portfolio homepage in English.
 * Route: /en
 * URL: https://your-domain.com/en
 */

// IMPORTS
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Projects from '../../components/Projects.astro';
import Footer from '../../components/Footer.astro';
import { useI18n } from '../../lib/i18n.js';

// LANGUAGE CONFIGURATION
const { t } = useI18n('en');
---

<style>
  .tours-section {
    padding: clamp(1rem, 4vw, 2rem);
    text-align: center;
    margin-top: 4rem;
  }

  .tours-section h2 {
    margin-bottom: 1rem;
    font-size: clamp(1.5rem, 5vw, 2rem);
  }

  .tour-item {
    margin: clamp(1rem, 4vw, 3rem) auto;
    max-width: 900px;
    width: 100%;
    padding: 0 clamp(0.5rem, 2vw, 1rem);
    box-sizing: border-box;
  }

  .tour-item h3 {
    margin: 0 0 clamp(0.5rem, 2vw, 0.75rem) 0;
    font-size: clamp(1.1rem, 3vw, 1.5rem);
  }

  .tour-image-container {
    width: 100%;
    border: 1px solid #ccc;
    border-radius: 8px;
    overflow: hidden;
  }

  .tour-image-container img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .tour-button-container {
    text-align: center;
    margin-top: clamp(0.5rem, 2vw, 0.75rem);
  }

  .tour-iframe-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    border: 1px solid #ccc;
    border-radius: 8px;
    overflow: hidden;
  }

  .tour-iframe-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .whatsapp-float {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    background: #25D366;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    box-shadow: 0 4px 12px rgba(37, 211, 102, 0.4);
    z-index: 1000;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .whatsapp-float:hover {
    background: #128C7E;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .tours-section {
      padding: clamp(1rem, 3vw, 1.5rem);
      margin-top: 2rem;
    }

    .tour-item {
      margin: clamp(0.75rem, 3vw, 1.5rem) auto;
    }
  }

  @media (max-width: 480px) {
    .tours-section {
      padding: 1rem;
      margin-top: 1.5rem;
    }

    .tour-item {
      margin: 1rem auto;
      padding: 0 0.5rem;
    }

    .tour-item h3 {
      margin-bottom: 0.5rem;
    }

    .tour-button-container {
      margin-top: 0.5rem;
    }

    .whatsapp-float span {
      display: none;
    }

    .whatsapp-float {
      width: 56px;
      height: 56px;
      padding: 0;
      justify-content: center;
      border-radius: 50%;
      bottom: 1rem;
      right: 1rem;
    }
  }
</style>

<Layout
  title={t.siteTitle}
  description={t.siteDescription}
  lang="en"
>
  <main id="main-content">
    <!-- HERO -->
    <Hero lang="en" />

    <!-- PROJECTS -->
    <Projects lang="en" />

    <!-- VIRTUAL TOURS -->
    <section id="tours" class="tours-section">
      <h2>Virtual Tours</h2>

      <!-- CICESE (preview with image) -->
      <div class="tour-item">
        <h3>Virtual Tour — CICESE</h3>

        <div class="tour-image-container">
          <img
            src="/CICESE.png"
            alt="CICESE virtual tour preview"
            loading="lazy"
          />
        </div>

        <div class="tour-button-container">
          
            href="https://ut3.cicese.mx/recorrido"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary mono"
          >
            Go to CICESE tour
          </a>
        </div>
      </div>

      <!-- UAE (responsive iframe) -->
      <div class="tour-item">
        <h3>Virtual Tour — UAE</h3>

        <div class="tour-iframe-container">
          <iframe
            src="https://victorjesusreavalencia.github.io/expo-arte/"
            title="UAE virtual tour"
            allowfullscreen
            loading="lazy"
          ></iframe>
        </div>
      </div>
    </section>

    <!-- WHATSAPP BUTTON -->
    <a 
      href="https://wa.me/525643997593" 
      target="_blank" 
      rel="noopener noreferrer" 
      class="whatsapp-float"
    >
      <span>Schedule appointment</span>
    </a>

    <!-- FOOTER -->
    <Footer lang="en" />
  </main>
</Layout>

<!--
  TECHNICAL NOTES
  ===============

  1. STATIC GENERATION (SSG):
     This page is generated at build time, not runtime.
     Command: npm run build
     Output: dist/en/index.html

  2. ALTERNATIVE LANGUAGE:
     This page is at /en, so it's the alternative language version.
     Visitors accessing https://your-domain.com/en see this version.

  3. LANGUAGE SWITCHING:
     The LanguageSwitcher component (included in Layout) allows
     switching between Spanish (/index.html) and English (/en/index.html)

  4. MULTILINGUAL SEO:
     Layout.astro includes <link rel="alternate"> tags that tell
     Google there's an alternative version in Spanish.

  5. PERFORMANCE:
     - Static HTML = instant loading
     - No JavaScript needed to render content
     - Minified CSS in production
     - Images lazy-loaded automatically

  HOW TO VERIFY:
  - Development: npm run dev → http://localhost:4321/en
  - Production: npm run build && npm run preview
-->